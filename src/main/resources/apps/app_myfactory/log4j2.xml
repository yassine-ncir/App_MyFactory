<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status = "info" name="MyApp">
    <Appenders>
        <Console name="logConsole" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </Console>
        <File name = "logFile" target="app.log" append="true" locking="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef name="logFile"/>
        </Root>
        <AppenderRef name="logConsole"/>
    </Loggers>
</Configuration>